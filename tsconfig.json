{
  "compileOnSave": false, // default is false
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false, // default is false
    "esModuleInterop": true, // default is false
    "forceConsistentCasingInFileNames": true, // default is false
    "importHelpers": true, // default is false
    "lib": ["ES2022", "dom"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true, // default is false
    "noImplicitOverride": true, // default is false
    "noImplicitReturns": true, // default is false
    "useDefineForClassFields": false, // default is false
    "noUnusedLocals": true, // default is false
    "noUnusedParameters": true, // default is false
    "skipLibCheck": true, // default is false
    "noPropertyAccessFromIndexSignature": true, // default is false
    "resolveJsonModule": true, // default is false
    "outDir": "./dist/out-tsc",
    "strictNullChecks": false, // default is false
    "strict": false, // default is false
    "target": "ES2022",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@core/*": ["./src/app/core/*"],
      "@env/*": ["./src/environments/*"],
      "@features/*": ["./src/app/features/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false, // default is true
    "strictInjectionParameters": true, // default is false
    "strictInputAccessModifiers": true, // default is false
    "strictTemplates": true, // default is false
    "fullTemplateTypeCheck": true // default is false
  }
}
